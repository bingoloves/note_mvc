<resources>
    <!--主按钮风格-->
    <style name="XMLButton">
        <item name="bl_corners_radius">4dp</item>
        <item name="android:textSize">@dimen/fontSize</item>
    </style>
    <style name="XMLButton.Style" parent="XMLButton">
        <item name="bl_pressed_drawable">@color/color_blue_light</item>
        <item name="bl_unPressed_drawable">@color/color_blue</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textSize">16sp</item>
        <item name="bl_pressed_textColor">#FFD5DFED</item>
        <item name="bl_unPressed_textColor">@color/color_white</item>
        <item name="bl_ripple_color">#FF3E7AE4</item>
        <item name="bl_ripple_enable">true</item>
    </style>
    <style name="XMLButton.Radius4" parent="XMLButton">
    </style>
    <style name="XMLButton.Radius8" parent="XMLButton">
        <item name="bl_corners_radius">8dp</item>
    </style>
    <!--边框样式-->
    <style name="XMLStroke">
        <item name="bl_stroke_width">1dp</item>
    </style>
    <style name="XMLStroke.Blue" parent="XMLStroke">
        <item name="bl_stroke_color">@color/color_blue_light</item>
    </style>
    <!--圆角背景-->
    <style name="XMLRadius.Blue" parent="XMLButton">
        <item name="bl_solid_color">@color/color_blue_light</item>
    </style>
</resources>
